---
import fb from "../assets/fb.svg";
import logo from "../assets/mrpg-logo.jpeg";
---

<!-- Get Involved Section -->
<footer>
  <section class="cta-section">
    <div class="container">
      <div class="cta-content">
        <h2>Get Involved</h2>
        <p>
          Join us in preserving this natural treasure for future generations.
          Every action counts in protecting our reservoir.
        </p>
        <div class="cta-buttons">
          <a href="/become-a-member" class="btn btn-primary">Memberships</a>
          <a href="/donate" class="btn btn-secondary">Donate</a>
          <a href="/contact" class="btn btn-seafoam">Volunteer</a>
        </div>
      </div>
    </div>
  </section>
  <div class="bottom-footer">
    <div class="logo-wrapper">
      <a href="/" class="logo-link">
        <img src={logo.src} loading="lazy" class="logo" alt="MRPG Logo" />
      </a>
      <p>
        Â© {new Date().getFullYear()} Moodus Reservoir Preservation Group, Inc. Association.
        All rights reserved.
      </p>
    </div>

    <!-- <div class="footer-menu">
      <p><a href="/about">ABOUT</a></p>
      <p><a href="/contact">CONTACT</a></p>
      <p><a href="events">EVENTS</a></p>

    </div> -->

    <div class="contact-footer">
      <a
        href="https://www.facebook.com/profile.php?id=100067067184783&fref=ts#"
        target="_blank"
        rel="noopener noreferrer"
      >
        <img src={fb.src} alt="Facebook" class="contact-icon" />
      </a>

      <p>
        PO Box 301<br />
        Moodus CT 06469
      </p>
    </div>
  </div>
</footer>

<style>
  footer {
    position: relative;
    z-index: 1;
    font-family: "Karla", sans-serif;

  }

  /* CTA Section */
  .cta-section {
    padding: var(--spacing-2xl) 0;
    text-align: center;
    color: white;
    position: relative;
    z-index: 3;
  }

  .cta-section::before {
    content: "";
    position: absolute;
    mix-blend-mode: multiply;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("../assets/bg.svg");
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    opacity: 0.15;
    z-index: -1;
  }

  .cta-content {
    position: relative;
    z-index: 1; /* Ensure content is above the ::before pseudo-element */
  }

  h2 {
    color: white !important;
  }

  .cta-content h2 {
    font-size: var(--font-size-3xl);
    font-weight: 700;
    margin: 0 0 var(--spacing-md) 0;
    /* text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3); */
  }

  .cta-content p {
    font-size: var(--font-size-lg);
    max-width: 600px;
    margin: 0 auto var(--spacing-2xl) auto;
    color: white;
    letter-spacing: 0.05em;
    /* text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3); */
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: var(--spacing-xs) var(--spacing-md);
    font-size: var(--font-size-sm);
    letter-spacing: 0.07em;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    position: relative;
    z-index: 1;
  }

  .btn-primary {
    background: var(--lake-coral);
    color: white;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .btn-primary:hover {
    background: #b56b4c;
    transform: translateY(-2px);
    box-shadow: 0 6px 12px -2px rgba(0, 0, 0, 0.15);
  }

  .btn-secondary {
    background: var(--lake-azure);
    color: white;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .btn-secondary:hover {
    background: #417c9d;
    transform: translateY(-2px);
    box-shadow: 0 6px 12px -2px rgba(0, 0, 0, 0.15);
  }

  .btn-seafoam {
    background: var(--lake-seafoam);
    color: white;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .btn-seafoam:hover {
    color: white;

    transform: translateY(-2px);
    background: #6ca38a;
    box-shadow: 0 6px 12px -2px rgba(0, 0, 0, 0.15);
  }

  .bottom-footer {
    display: flex;
    max-width: 1200px;
    flex: 1 100%;
    margin: 20px auto;
    justify-content: space-between;
    align-items: center;
    padding: var(--spacing-sm) 0;
    font-size: var(--font-size-sm);
    position: relative;
    z-index: 2; 
  }
  .logo-wrapper {
    max-width: 300px;
}

.logo {
    width: 100%;
    height: auto;
max-width: 150px;

}

.footer-menu a {
    color: var(--lake-azure);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
  }
  .footer-menu a:hover {
    color: var(--lake-coral);
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .cta-section {
      padding: var(--spacing-xl) 0;
    }

    .cta-content h2 {
      font-size: var(--font-size-2xl, 2rem);
    }

    .cta-content p {
      font-size: var(--font-size-base);
      margin-bottom: var(--spacing-lg);
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
      gap: var(--spacing-sm);
    }

    .btn {
      width: 100%;
      max-width: 200px;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    .cta-section {
      padding: var(--spacing-lg) 0;
    }

    .cta-content h2 {
      font-size: var(--font-size-xl, 1.5rem);
    }
  }
</style>
