<style is:global>
  :root {
    --lake-deep-blue: #1e3a5f;
  --lake-azure: #4a90b8;
  --lake-teal: #2d8599;
  --lake-coral: #e07a5f;
  --lake-seafoam: #81c3a4;
  --lake-shore: #a8bfb5;
 --lake-depth : #2c4757;
  --lake-sky: #87ceeb;
  --lake-mist: #f0f8ff;

  /* Gradients */
  --lake-gradient: linear-gradient(
    135deg,
    var(--lake-deep-blue) 0%,
    var(--lake-teal) 100%
  );
  --warm-gradient: linear-gradient(
    135deg,
    var(--lake-coral) 0%,
    var(--lake-seafoam) 100%
  );

  /* Spacing */
  --spacing-xs: 0.5rem;
  --spacing-sm: 1rem;
  --spacing-md: 1.5rem;
  --spacing-lg: 2rem;
  --spacing-xl: 3rem;
  --spacing-2xl: 4rem;

  /* Typography */
  --font-size-sm: 0.875rem;
  --font-size-base: 1rem;
  --font-size-lg: 1.125rem;
  --font-size-xl: 1.35rem;
  --font-size-2xl: 1.8rem;
  --font-size-3xl: 2.3rem;
  --font-size-4xl: 3.2rem;

  /* Shadows */
  --shadow-soft:
    0 4px 6px -1px rgba(30, 58, 95, 0.1),
    0 2px 4px -1px rgba(30, 58, 95, 0.06);
  --shadow-medium:
    0 10px 15px -3px rgba(30, 58, 95, 0.1),
    0 4px 6px -2px rgba(30, 58, 95, 0.05);
  --shadow-large:
    0 20px 25px -5px rgba(30, 58, 95, 0.1),
    0 10px 10px -5px rgba(30, 58, 95, 0.04);

  --swiper-navigation-size: 30px !important;
}

/* Global Styles */
* {
  box-sizing: border-box;
  font-family: "Montserrat", sans-serif;
}
h1 {
  font-size: var(--font-size-4xl);
}

h2 {
  font-size: var(--font-size-3xl);
}

h3 {
  font-size: var(--font-size-2xl);
}

h4 {
  font-size: var(--font-size-xl);
}

@media (max-width: 768px) {
  h1 {
    font-size: var(--font-size-3xl);
  }

  h2 {
    font-size: var(--font-size-2xl);
  }

  h3 {
    font-size: var(--font-size-xl);
  }

  h4 {
    font-size: var(--font-size-lg);
  }
}

@media (max-width: 480px) {
  h1 {
    font-size: var(--font-size-2xl);
  }

  h2 {
    font-size: var(--font-size-xl);
  }

  h3 {
    font-size: var(--font-size-lg);
  }

  h4 {
    font-size: var(--font-size-base);
  }
}

h1{
  color: var(--lake-deep-blue);
  line-height: 1.2;
  font-family: "Karla", sans-serif;
  font-weight: 700;
}
h2,
h3,
h4,
h5,
h6 {
  color: var(--lake-deep-blue);
  line-height: 1.2;
 font-family: "Karla", sans-serif;
  font-weight: 500;
}
p, ul, li{
  color: black;
  line-height: 1.6;
  font-family: "Montserrat", sans-serif;
  font-size: 16px;
}

strong {
  font-family: inherit;
}

a {
  color: var(--lake-coral);
  transition: color 0.3s ease;
}


  body {
    color: rgb(55, 55, 55);
    margin: 0;
    padding: 0;
  }
  .layout-container {
    position: relative;
    top: 130px;
  }

  /* Hero Section */
  .hero-section {
    position: relative;
    width: 100%;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--lake-gradient);
    overflow: hidden;
  }

  .hero-section::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.03'%3E%3Cpath d='M30 30c0-11.046-8.954-20-20-20s-20 8.954-20 20 8.954 20 20 20 20-8.954 20-20zm0 0c0 11.046 8.954 20 20 20s20-8.954 20-20-8.954-20-20-20-20 8.954-20 20z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E")
      repeat;
    pointer-events: none;
  }

  .fallback-hero {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--spacing-2xl) var(--spacing-lg);
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-title {
    font-size: var(--font-size-4xl);
    font-weight: 700;
    color: white;
    margin: 0 0 var(--spacing-md) 0;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: var(--font-size-xl);

    font-weight: 300;
    margin: 0;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--spacing-lg);
  }

  /* Hero Section */
  .hero-section {
    position: relative;
    height: 100vh;
    min-height: 600px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--lake-gradient);
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.03'%3E%3Cpath d='M30 30c0-11.046-8.954-20-20-20s-20 8.954-20 20 8.954 20 20 20 20-8.954 20-20zm0 0c0 11.046 8.954 20 20 20s20-8.954 20-20-8.954-20-20-20-20 8.954-20 20z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    text-align: center;
    color: white;
    overflow: hidden;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    max-width: 800px;
    padding: var(--spacing-2xl);
  }

  .hero-title {
    font-size: var(--font-size-4xl);
    font-weight: 700;
    margin: 0 0 var(--spacing-md) 0;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    line-height: 1.2;
  }

  .hero-subtitle {
    font-size: var(--font-size-xl);
    margin: 0 0 var(--spacing-2xl) 0;

    font-weight: 300;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    gap: var(--spacing-2xl);
    margin-top: var(--spacing-2xl);
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .stat-number {
    font-size: var(--font-size-3xl);
    font-weight: 700;
    color: var(--lake-seafoam);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }

  .stat-label {
    font-size: var(--font-size-base);
    color: white;
    opacity: 0.9;
  }

  /* Carousel Section */
  .carousel-section {
    padding: var(--spacing-lg) 0 0 0;
    background: white;
  }

  .home-section-title {

    margin: 0 0 var(--spacing-md) 0;
    text-align: center;
  }
  .section-title {
    text-align: center;

    margin: 0 0 var(--spacing-sm) 0;
  }

  .section-subtitle {
    font-size: var(--font-size-lg);
    text-align: center;

    margin: 0 0 var(--spacing-2xl) 0;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .swiper-container {
    position: relative;
    overflow: hidden;
    /* border-radius: 16px; */
    box-shadow: var(--shadow-large);
  }

  .swiper-slide {
    position: relative;
  }

  .slide-content {
    position: relative;
    height: 500px;
    overflow: hidden;
  }

  .slide-content img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .swiper-slide:hover .slide-content img {
    transform: scale(1.05);
  }

  .slide-caption {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
    color: white;
    padding: var(--spacing-2xl) var(--spacing-lg) var(--spacing-lg);
    text-align: center;
  }

  .slide-caption h3 {
    font-size: var(--font-size-xl);
    font-weight: 600;
    margin: 0 0 var(--spacing-xs) 0;
  }

  .slide-caption p {
    font-size: var(--font-size-base);
    margin: 0;
    opacity: 0.9;
  }

  /* Swiper Navigation */
  .swiper-button-next,
  .swiper-button-prev {
    width: 20px;
    height: 20px;
    margin-top: -25px;
  }

  .swiper-button-next:after,
  .swiper-button-prev:after {
    font-size: 20px;
    color: white;
  }

  .swiper-pagination-bullet {
    background: white !important;
    color: white !important;
    opacity: 0.3;
  }

  .swiper-pagination-bullet-active {
    opacity: 1;
    background: white !important;
    color: white;
  }

  /* About Section */
  .two-column-section {
    padding: var(--spacing-2xl) 0;
    background: #fafafa;
  }

  .two-column-grid {
    display: grid;
    padding: 60px 0;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-2xl);
    align-items: center;
  }

  .two-column-grid .section-title {
    text-align: unset;
  }
  .two-column-text p {
    font-size: var(--font-size-lg);
    line-height: 1.7;

    margin-bottom: var(--spacing-md);
  }

  .two-column-image {
    position: relative;
  }

  .two-column-image img {
    width: 100%;
    object-fit: cover;
    /* border-radius: 12px; */
    box-shadow: var(--shadow-medium);
  }

  /* Initiatives Section */
  .initiatives-section {
    padding: var(--spacing-2xl) 0;
    background: white;
  }

  .initiatives-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-lg);
    margin-top: var(--spacing-2xl);
  }

  .initiative-card {
    background:#fafafa;;
    padding: var(--spacing-xl);
    /* border-radius: 12px; */
    text-align: center;
    box-shadow: var(--shadow-soft);
    transition: all 0.3s ease;
  }

  .initiative-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-medium);
  }

  .initiative-icon {
    font-size: 3rem;
    margin-bottom: var(--spacing-md);
    display: block;
  }

  .initiative-card h3 {
    font-size: var(--font-size-xl);
    font-weight: 600;

    margin: 0 0 var(--spacing-md) 0;
  }

  .initiative-card p {

    line-height: 1.6;
    margin: 0;
  }

  /* CTA Section */
  .cta-section {
    padding: var(--spacing-2xl) 0;
    background: var(--lake-gradient);
    text-align: center;
    color: white;
  }

  .cta-content h2 {
    font-size: var(--font-size-3xl);
    font-weight: 700;
    margin: 0 0 var(--spacing-md) 0;
  }

  .cta-content p {
    font-size: var(--font-size-lg);
    max-width: 600px;
    margin: 0 auto var(--spacing-2xl) auto;

  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: var(--spacing-xs) var(--spacing-md);
    font-size: var(--font-size-sm);
    letter-spacing: 0.07em;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .btn-primary {
    background: var(--lake-coral);
    color: white;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .btn-primary:hover {
    background: #b56b4c;
    transform: translateY(-2px);
    box-shadow: 0 6px 12px -2px rgba(0, 0, 0, 0.15);
  }

  .btn-secondary {
    background: var(--lake-azure);
    color: white;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .btn-secondary:hover {
    background:#417c9d;
    transform: translateY(-2px);
    box-shadow: 0 6px 12px -2px rgba(0, 0, 0, 0.15);
  }

  .btn-seafoam{
    background: var(--lake-seafoam);
    color: white;

    backdrop-filter: blur(10px);
  }

  .btn-seafoam:hover {

    color: var(--lake-deep-blue);
    transform: translateY(-2px);
    background: white;
    box-shadow: 0 6px 12px -2px rgba(255, 255, 255, 0.2);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .layout-container {
      position: relative;
      top: 100px;
    }
    .hero-title {
      font-size: var(--font-size-3xl);
    }

    .hero-subtitle {
      font-size: var(--font-size-lg);
    }

    .hero-stats {
      gap: var(--spacing-lg);
    }

    .two-column-grid {
      grid-template-columns: 1fr;
    }

    .initiatives-grid {
      grid-template-columns: 1fr;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 200px;
    }

    .slide-content {
      height: 300px;
    }

    .container {
      padding: 0 var(--spacing-md);
    }
  }

  @media (max-width: 480px) {
    .hero-stats {
      flex-direction: column;
      gap: var(--spacing-md);
    }

    .hero-title {
      font-size: var(--font-size-2xl);
    }

    .section-title {
      font-size: var(--font-size-2xl);
    }
  }
  .link a {
    color: var(--lake-azure);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  header.page-header {
    height: 40vh;
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  header.page-header h1 {
    color: white;
    font-size: var(--font-size-4xl);
    margin: 0;
    text-align: center;
    padding: var(--spacing-lg);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
  }
</style>
