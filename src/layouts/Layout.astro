  :root {
    --lake-deep-blue: #1e3a5f;
    --lake-azure: #4a90b8;
    --lake-teal: #2d8599;
    --lake-coral: #e07a5f;
    --lake-seafoam: #81c3a4;
    --lake-shore: #a8bfb5;
    --lake-depth: #2c4757;
    --lake-sky: #87ceeb;
    --lake-mist: #f0f8ff;

    /* Gradients */
    --lake-gradient: linear-gradient(
      135deg,
      var(--lake-deep-blue) 0%,
      var(--lake-teal) 100%
    );
    --warm-gradient: linear-gradient(
      135deg,
      var(--lake-coral) 0%,
      var(--lake-seafoam) 100%
    );

    /* Spacing */
    --spacing-xs: 0.5rem;
    --spacing-sm: 1rem;
    --spacing-md: 1.5rem;
    --spacing-lg: 2rem;
    --spacing-xl: 3rem;
    --spacing-2xl: 4rem;

    /* Typography */
    --font-size-sm: 0.875rem;
    --font-size-base: 1rem;
    --font-size-lg: 1.125rem;
    --font-size-xl: 1.35rem;
    --font-size-2xl: 1.8rem;
    --font-size-3xl: 2.3rem;
    --font-size-4xl: 3.2rem;

    /* Shadows */
    --shadow-soft:
      0 4px 6px -1px rgba(30, 58, 95, 0.1),
      0 2px 4px -1px rgba(30, 58, 95, 0.06);
    --shadow-medium:
      0 10px 15px -3px rgba(30, 58, 95, 0.1),
      0 4px 6px -2px rgba(30, 58, 95, 0.05);
    --shadow-large:
      0 20px 25px -5px rgba(30, 58, 95, 0.1),
      0 10px 10px -5px rgba(30, 58, 95, 0.04);

    --swiper-navigation-size: 30px !important;
  }

