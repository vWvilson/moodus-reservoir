---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="contact-container">
    <div class="contact-header">
      <h1>Get in Touch</h1>
      <p>
        We'd love to hear from you. Choose how you'd like to connect with us.
      </p>
    </div>

    <form name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field">
      <input type="hidden" name="form-name" value="contact" />
      <p style="display: none;">
          <label>Don't fill this out: <input name="bot-field" /></label>
      </p>
      
      <p>
          <label>Name: <input type="text" name="name" required /></label>
      </p>
      <p>
          <label>Email: <input type="email" name="email" required /></label>
      </p>
      <p>
          <label>Message: <textarea name="message" required></textarea></label>
      </p>
      <p>
          <button type="submit">Send</button>
      </p>
  </form>
  </div>



  <style>
    .contact-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: var(--spacing-2xl) var(--spacing-lg);
      background: white;
      border-radius: var(--radius-lg);
      box-shadow: var(--shadow-large);
    }
    .contact-header {
      background: #0c3a73;
      color: white;
      padding: var(--spacing-2xl) var(--spacing-lg);
      text-align: center;
      position: relative;
      z-index: 1;
    }
    /* .contact-header::before {
      content: "";
      position: absolute;
      mix-blend-mode: multiply;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: url("../assets/bg.svg");
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center;
      opacity: 0.3;
      z-index: -1;
    } */

    .contact-header h1 {
      color: white;
      font-size: var(--font-size-3xl);
      font-weight: 700;
      margin-bottom: var(--spacing-sm);
      /* text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3); */
    }

    .contact-header p {
      color: white;
      font-size: var(--font-size-lg);
      letter-spacing: 0.05em;
      /* text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3); */
    }

    .contact-form {
      padding: var(--spacing-xl) var(--spacing-lg);
    }

    .form-section {
      margin-bottom: var(--spacing-xl);
    }

    .form-section h3 {
      font-size: var(--font-size-xl);
      color: var(--lake-depth);
      margin-bottom: var(--spacing-md);
      font-weight: 600;
    }

    .form-description {
      color:black;
      margin-bottom: var(--spacing-md);
    }

    /* Inquiry Type Selection */
    .inquiry-types {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: var(--spacing-md);
      margin-bottom: var(--spacing-lg);
    }

    .inquiry-option {
      cursor: pointer;
    }

    .inquiry-option input[type="radio"] {
      display: none;
    }

    .option-card {
      border-top: 6px solid var(--lake-seafoam);
      box-shadow: var(--shadow-medium);
      padding: var(--spacing-lg);
      text-align: center;
      transition: all 0.3s ease;
      height: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .option-card:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-large);
    }

    .inquiry-option input[type="radio"]:checked + .option-card {
      border-color: var(--lake-deep-blue);
      background: white;
      box-shadow: var(--shadow-medium);
    }
.fa {
      font-size: 24px;
      color: var(--lake-deep-blue);
    }


    .option-icon {
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: var(--spacing-sm);
    }



  


    .option-card h4 {
      font-size: var(--font-size-lg);
      font-weight: 600;
      color: var(--lake-deep-blue);
      margin-bottom: var(--spacing-xs);
    }

    .option-card p {
      font-size: var(--font-size-sm);
      color: var(--earth-stone);
    }

    /* Form Fields */
    .form-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--spacing-md);
    }

    .form-group {
      margin-bottom: var(--spacing-md);
    }

    .form-group label {
      display: block;
      font-weight: 500;
      color: var(--lake-deep-blue);
      margin-bottom: var(--spacing-xs);
    }

    .form-group input,
    .form-group textarea {
      width: 100%;
      padding: var(--spacing-sm);
      border: 2px solid #e5e5e5;
      border-radius: var(--radius-md);
      font-size: var(--font-size-base);
      transition: all 0.3s ease;
      background: white;
    }

    .form-group input:focus,
    .form-group textarea:focus {
      outline: none;
      border-color: var(--lake-deep-blue);
      box-shadow: 0 0 0 3px rgba(135, 169, 107, 0.1);
    }

    .form-group textarea {
      resize: vertical;
      min-height: 100px;
    }

    /* Checkboxes */
    .checkbox-group {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: var(--spacing-sm);
    }

    .checkbox-label {
      display: flex;
      align-items: center;
      cursor: pointer;
      padding: var(--spacing-sm);
      border-radius: var(--radius-md);
      transition: background 0.2s ease;
    }

    .checkbox-label:hover {
      background: var(--earth-mist);
    }

    .checkbox-label input[type="checkbox"] {
      width: auto;
      margin-right: var(--spacing-sm);
      accent-color: var(--lake-deep-blue);
    }

    .newsletter-signup {
      background: var(--earth-mist);
      padding: var(--spacing-md);
      border-radius: var(--radius-lg);
      border: 2px solid transparent;
      transition: all 0.3s ease;
    }

    .newsletter-signup:hover {
      border-color: var(--lake-deep-blue);
    }

    /* Submit Button */
    .submit-btn {

      background:  var(--lake-seafoam);
    color: white;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
      color: white;
      border: none;
      padding: var(--spacing-md) var(--spacing-lg);
      font-size: var(--font-size-lg);
      font-weight: 600;
      border-radius: var(--radius-lg);
      cursor: pointer;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .submit-btn:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-large);
    }

    .submit-btn:disabled {
      opacity: 0.7;
      cursor: not-allowed;
      transform: none;
    }

    .btn-loader {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }

    .loader {
      width: 20px;
      height: 20px;
      border: 2px solid rgba(255, 255, 255, 0.3);
      border-top: 2px solid white;
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% {
        transform: rotate(0deg);
      }
      100% {
        transform: rotate(360deg);
      }
    }

    /* Success Message */
    .success-message {
      text-align: center;
      padding: var(--spacing-xl);
      background: linear-gradient(
        135deg,
        var(--lake-deep-blue) 0%,
        var(--earth-moss) 100%
      );
      color: white;
      border-radius: var(--radius-lg);
      margin-top: var(--spacing-lg);
    }

    .success-icon {
      width: 64px;
      height: 64px;
      background: rgba(255, 255, 255, 0.2);
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto var(--spacing-md);
    }

    .success-icon svg {
      width: 32px;
      height: 32px;
    }

    .success-message h3 {
      font-size: var(--font-size-xl);
      margin-bottom: var(--spacing-sm);
    }

    /* Mobile Responsiveness */
    @media (max-width: 768px) {
      body {
        padding: var(--spacing-sm);
      }

      .contact-header {
        padding: var(--spacing-lg);
      }

      .contact-header h1 {
        font-size: var(--font-size-2xl);
      }

      .contact-form {
        padding: var(--spacing-lg) var(--spacing-sm);
      }

      .inquiry-types {
        grid-template-columns: 1fr;
      }

      .form-row {
        grid-template-columns: 1fr;
      }

      .checkbox-group {
        grid-template-columns: 1fr;
      }
    }

    @media (max-width: 480px) {
      .contact-header {
        padding: var(--spacing-md);
      }

      .contact-form {
        padding: var(--spacing-md);
      }

      .form-section {
        margin-bottom: var(--spacing-lg);
      }
    }




    
  </style>

</Layout>
