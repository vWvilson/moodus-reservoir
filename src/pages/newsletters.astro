---
import Layout from "../layouts/Layout.astro";

import hero from "../assets/hero-i.jpg";

import pdfIcon from "../assets/pdf-icon.svg";
---

<Layout>
  <!-- Hero Section -->
  <section class="i-hero-section" style={`background-image: url(${hero.src})`}>
    <div class="hero-content">
      <h1 class="hero-title">Newsletters</h1>
    </div>
    <div class="hero-overlay"></div>
  </section>

  <!-- About Section -->
  <section class="two-column-section">
    <div class="container">
      <div class="i-div">
        <div>
          <h2 class="section-title">Our Newsletters</h2>

          <p>
            Stay connected with the latest updates, conservation efforts, and
            community news. Browse our archive of past newsletters in PDF format
            to catch up on important announcements, and upcoming events about
            Moodus Reservoir.
          </p>
        </div>
      </div>
      <div class="pdf-grid">
        <div class="pdf-item">
          <a href="/permit-recs-drawdown.pdf" target="_blank">
            <img src={pdfIcon.src} alt="PDF Icon" class="pdf-icon" />
            <span>Spring 2025 Newsltter</span>
          </a>
        </div>

